<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
     <th>Name </th>
     <th>Email </th>
     <th>Phone </th>
     <th>Twitter </th>
     <th>User ID </th>

    </tr>
  </thead>

  <tbody>
 

    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>

      <tr>
        <td>
        <%= friend.first_name %>
        <%= friend.last_name %>
        </td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>

        <td><%= link_to "Show this friend", friend, class:"btn btn-primary" %></td>
      

        <td><%= link_to "Edit", edit_friend_path(friend) %></td>
       

      </tr>
      <% end %>

    <% end %>
  </tbody>

</table>


<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>

<h1>Welcome to Student App</h1>
<p>Please sign in</p>


<% end %>
